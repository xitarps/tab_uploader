<span class="text-center">
  <h2><%= t(:edit_user) %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>

    <div class="form-group my-3">
      <%= f.label t(:email) %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group my-3">
      <%= f.label t(:password) %> <i>(<%= t(:dont_want_to_change) %>)</i><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> <%= t(:minimum_chars) %></em>
      <% end %>
    </div>

    <div class="form-group my-3">
      <%= f.label t(:password_confirmation) %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="form-group my-3">
      <%= f.label t(:current_password) %> <i>(<%= t(:confirm_with_current_password) %>)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>

    <div class="actions">
      <%= f.submit "Update" %>
    </div>
  <% end %>

  <h3><%= t(:cancel_account) %></h3>

  <p><%= t(:unhappy) %> <%= button_to t(:cancel_account), registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

  <p>
    <%= link_to t(:back), :back %>
  </p>
</span>